<!DOCTYPE html>
<html>

<% const title = global.page_titles[page] %>
<% include ../views/templates/head %>

<!DOCTYPE html>
<html>

<% include ../views/templates/head %>
<link href="/css/forms.css" rel="stylesheet">


<body onload="initApp()">
    <div id="app">
        <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
            <% include ../views/templates/header %>
            <% include ../views/templates/nav %>
            <main class="mdl-layout__content mat-typography">

                <h2>Create Events</h2>


                <div class="container">
                    <form>
                        <div class="mdl-selectfield mdl-js-selectfield mdl-selectfield--floating-label">
                            <select class="mdl-selectfield__select" id="genres" name="genres">
                                <option value="Ambient">Ambient</option>
                                <option value="Blues">Blues</option>
                                <option value="Classical">Classical</option>
                                <option value="Country">Country</option>
                                <option value="Electronic">Electronic</option>
                                <option value="Folk">Folk</option>
                                <option value="Hip-hop">Hip-hop</option>
                                <option value="House">House</option>
                                <option value="Jazz">Jazz</option>
                                <option value="Pop">Pop</option>
                                <option value="Progressive">Progressive</option>
                                <option value="Psychedelic">Psychedelic</option>
                                <option value="R&B">R&B</option>
                                <option value="Reggae">Reggae</option>
                                <option value="Rock">Rock</option>
                            </select>
                            <label class="mdl-selectfield__label" for="genres" >Select Genres</label><i class="bar"></i>
                            <div class="mdc-line-ripple"></div>
                        </div>

                        <div class="form-group">
                            <input type="text" required="required" />
                            <label for="input" class="control-label">Name of the Event</label><i class="bar"></i>
                        </div>
                        <div class="form-group">
                            <textarea required="required"></textarea>
                            <label for="textarea" class="control-label">Description of the Event</label><i
                                class="bar"></i>
                        </div>
                        <div class="file_input_div">
                            <div class="file_input">
                                <label
                                class="file-upload mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
                                    <span>Browse</span>
                                    <i class="material-icons">file upload</i>
                                    <input id="file_input_file" class="none" type="file" />
                                </label>
                            </div>
                            <div id="file_input_text_div" class="mdl-textfield mdl-js-textfield textfield-demo">
                                <input class="file_input_text mdl-textfield__input" type="text" disabled readonly
                                    id="file_input_text" />
                                <label class="mdl-textfield__label" for="file_input_text"></label>
                            </div>
                        </div>
                        <div>
                            <input type="text" name="birthday" value="05/30/2019" />
                        </div>

                    </form>
                    <div class="button-container">
                        <button type="submit" class="button"><span>Submit</span></button>
                    </div>
                </div>

</html>
